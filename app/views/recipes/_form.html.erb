<%= simple_form_for(@recipe) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="field">
    <div class="control">
      <%= f.input :name,
          label: "Name",
          required: true,
          autofocus: true,
          placeholder: "food name",
          input_html: { class: "input", autocomplete: "name" },
          wrapper: false,
          label_html: { class: "label" } %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :preparation_time,
          label: "Preparation Time",
          required: true,
          placeholder: "preparation time",
          input_html: { class: "input", autocomplete: "preparation_time" },
          wrapper: false,
          label_html: { class: "label" } %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :cooking_time,
          label: "Cooking Time",
          required: true,
          placeholder: "cooking time",
          input_html: { class: "input", autocomplete: "cooking_time" },
          wrapper: false,
          label_html: { class: "label" } %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :description,
          label: "Description",
          required: true,
          placeholder: "description",
          input_html: { class: "textarea", autocomplete: "description" },
          wrapper: false,
          label_html: { class: "label" } %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :public, as: :boolean,
          checked_value: 'true',
          unchecked_value: 'false',
          label: "Is Public?",
          required: true,
          placeholder: "public",
          input_html: { class: "checkbox" },
          wrapper: false,
          label_html: { class: "label" } %>
    </div>
  </div>

  <div class="buttons">
    <%= f.button :submit, "Add Recipe", class:"button is-save is-rounded is-normal" %>
    <%= link_to "Back to recipes", recipes_path, class: "button is-link is-light is-rounded is-normal" %>
  </div>
<% end %>
