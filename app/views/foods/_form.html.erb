<%= simple_form_for(@food) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :name,
          label: "Name",
          required: true,
          autofocus: true,
          placeholder: "food name",
          input_html: { class: "input", autocomplete: "name" },
          wrapper: false,
          label_html: { class: "label" } %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :measurement_unit,
          label: "Measurement Unit",
          required: true,
          placeholder: "measurement unit",
          input_html: { class: "input", autocomplete: "measurement_unit" },
          wrapper: false,
          label_html: { class: "label" } %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :price,
          label: "Price",
          required: true,
          placeholder: "price",
          input_html: { class: "input", autocomplete: "price" },
          wrapper: false,
          label_html: { class: "label" } %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :qty,
          label: "Quantity",
          required: true,
          placeholder: "quantity",
          input_html: { class: "input", autocomplete: "quantity" },
          wrapper: false,
          label_html: { class: "label" } %>
    </div>
  </div>
  <div class="buttons">
    <%= f.button :submit, "Add Food", class:"button is-save is-rounded is-normal" %>
    <%= link_to "Back to foods", foods_path, class: "button is-link is-light is-rounded is-normal" %>
  </div>
<% end %>


