<section class="section">
  <div class="container">
    <div class="field is-grouped is-justify-content-right">
      <p class="control">
          <%= link_to new_food_path do %>
              <button 
                class="button js-modal-trigger is-save is-outlined is-rounded is-align-content-end" 
                data-target="modal-js-example">
                New Food
              </button>
          <% end %>  
      </p>
    </div>
    <div class="table-container">
      <table class="table is-bordered is-striped is-hoverable is-fullwidth">
        <thead class="thead">
          <tr>
            <th>Food</th>
            <th>Measurement Unit</th>
            <th>Unit Price</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @foods.each do | food | %>
            <tr>
              <td><%= food.name %></td>
              <td><%= food.measurement_unit %></td>
              <td>$<%= food.price %></td>
              <td>
                <% if can? :destroy, food %>
                  <%= link_to food, method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this food?' }, class: "level-item" do %>
                    <button class="button is-danger is-outlined is-rounded is-responsive">
                      <span><ion-icon name="trash"></ion-icon></span>
                    </button>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>
